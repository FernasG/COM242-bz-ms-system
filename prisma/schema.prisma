generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  cellphone     String
  password_hash String
  register      String      @unique
  balance       Int         @default(0)
  created_at    DateTime    @default(now())
  updated_at    DateTime?
  deleted_at    DateTime?
  role_id       String
  streetId      String?
  Blacklist     Blacklist[]
  role          Role        @relation(fields: [role_id], references: [id])
  streets       Street?     @relation(fields: [streetId], references: [id])
  Vehicle       Vehicle[]

  @@map("users")
}

model Vehicle {
  id              String            @id @default(uuid())
  plate           String            @unique
  model           String
  color           String
  manufacturer    String
  user_id         String
  Parking_Session Parking_Session[]
  user            User              @relation(fields: [user_id], references: [id])

  @@map("vehicles")
}

model Role {
  id   String @id @default(uuid())
  name String
  User User[]

  @@map("roles")
}

model Blacklist {
  id      String @id @default(uuid())
  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  @@map("blacklist")
}

model Street {
  id              String            @id @default(uuid())
  name            String
  neighborhood    String
  qrcode_url      String            @unique
  vacancies       Int
  created_at      DateTime          @default(now())
  updated_at      DateTime?
  Parking_Session Parking_Session[]
  users           User[]

  @@map("streets")
}

model Parking_Session {
  id          String    @id @default(uuid())
  entry_time  DateTime
  hours       Float?
  total_price Int?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  street_id   String
  vehicle_id  String
  street      Street    @relation(fields: [street_id], references: [id])
  vehicle     Vehicle   @relation(fields: [vehicle_id], references: [id])

  @@map("parking_sessions")
}
